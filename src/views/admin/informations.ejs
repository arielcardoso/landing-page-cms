<%- include('elements/head') %>

<div class='page-title'>
    <h2>Site Info</h2>
    <p>Define business informations.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form class="row" method='post' ectype="multipart/form-data" >
            <div class="col-12 mb-3">
                <label class="form-label">Website Title</label>
                <input name='site_title' value="<%= data.site_title %>" type="text" class="form-control" >
            </div>
            <div class="col-12 mb-3">
                <label class="form-label">Website Description</label>
                <textarea name='site_description' class="form-control" rows="2"><%= data.site_description %></textarea>
            </div>
            <div class="col-12">
                <h5 class='my-4'>Social Networks</h5>
                <div class="row"> 
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Facebook</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" >
                                <i class='bi bi-facebook'></i>
                            </span>
                            <input type="text" name='social_facebook' value="<%= data.social_facebook %>" class="form-control" placeholder="Facebook Url" >
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Instagram</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" >
                                <i class='bi bi-instagram'></i>
                            </span>
                            <input type="text" name='social_instagram' value="<%= data.social_instagram %>" class="form-control" placeholder="Instagram Url" >
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Twitter</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" >
                                <i class='bi bi-twitter'></i>
                            </span>
                            <input type="text" name='social_twitter' value="<%= data.social_twitter %>" class="form-control" placeholder="Twitter Url" >
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Linked In</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" >
                                <i class='bi bi-linkedin'></i>
                            </span>
                            <input type="text" name='social_linkedin' value="<%= data.social_linkedin %>" class="form-control" placeholder="Linked In" >
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <hr/>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<%- include('elements/footer') %>