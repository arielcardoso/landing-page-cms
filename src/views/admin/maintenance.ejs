<%- include('elements/head') %>

<div class='page-title'>
    <h2>Maintenence</h2>
    <p>Set the website to maintenence mode.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form class="row" method='post' >
            <div class="col-12 col-sm-6 mb-3">
                <label class="form-label">Enable the maintenance mode?</label><br>
                <div class="form-check form-check-inline mt-2">
                    <input class="form-check-input" type="radio" name="site_maintenance" value="1" <%if (data.site_maintenance == '1') { %> checked="checked" <% } %> >
                    <label class="form-check-label" >Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="site_maintenance" value="" <%if (data.site_maintenance == '') { %> checked="checked" <% } %> >
                    <label class="form-check-label" >No</label>
                </div>
            </div>
            <div class="col-12">
                <hr/>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<%- include('elements/footer') %>