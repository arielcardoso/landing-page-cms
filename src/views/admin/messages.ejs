<%- include('elements/head') %>

<div class='page-title'>
    <h2>Messages</h2>
    <p>Read messages received.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <div class="row" >
            <div class="col-12 mb-3">
                <ul class="list-group list-group-flush">
                    <% if (!messages) { %>
                        <li class="list-group-item">
                            <br/><p>No messages found.</p>
                        </li>
                    <% } else { %>
                        <% messages.forEach(function(item) { %>
                            <li class="list-group-item d-flex justify-content-start pt-3">
                                <h3 class="bi bi-chat-dots me-3"></h3>
                                <div class='row w-100'>
                                    <div class="col-12">
                                        <p class="small fw-bold mt-2"><%= moment(item.date).fromNow() %></p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="small">
                                            <strong>From:</strong> <%= item.name %><br>
                                            <strong>Phone:</strong> <%= item.phone %><br>
                                            <strong>Email:</strong> <%= item.email %>
                                        </p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="small muted">
                                            <strong>Message:</strong><br>
                                            <%= item.message %>
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    <a href='/admin/messages/delete/<%= item._id %>' class='btn btn-sm btn-danger mt-5' title='Delete' >X</a>
                                </div>
                            </li>
                        <% }); %>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('elements/footer') %>