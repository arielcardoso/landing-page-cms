<%- include('elements/head') %>

<div class='page-title'>
    <h2>FAQ</h2>
    <p>Create questions and answers.</p>
</div>

<div class="card mb-3">
    <div class="card-header bg-light">
        Section Options
    </div>
    <div class="card-body">
        <form class="row" method='post' enctype="multipart/form-data" >
            <div class="col-12 mb-3">
                <label class="form-label">Section Title</label>
                <input name='title' type="text" class="form-control" >
            </div>
            <div class="col-12 mb-3">
                <label class="form-label">Description (optional)</label>
                <textarea name='description' class="form-control" rows="2"></textarea>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save<i class="bi bi-check-circle ms-2"></i></button>

                <button type="button" class="btn btn-secondary ms-2" data-bs-toggle="modal" data-bs-target="#new-question-modal">
                    Add Question<i class="bi bi-plus-circle ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header bg-light">
        Questions
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item px-0 py-3">
                <h6>Question</h6>
                <p class='mb-0'>Answer...</p>
            </li>
            <li class="list-group-item px-0 py-3">
                <h6>Question</h6>
                <p class='mb-0'>Answer...</p>
            </li>
          </ul>
    </div>
</div>
  
<!-- New questions Modal -->
<div class="modal fade" id="new-question-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method='post' >
                <div class="modal-header">
                    <h5 class="modal-title" >New Question</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Question</label>
                        <div class="col-sm-10">
                            <input name='question[1]' placeholder="Question" class="form-control" type="text" >
                        </div>
                    </div>
            
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Answer</label>
                        <div class="col-sm-10">
                            <textarea name='answer[1]' placeholder="Answer" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
            
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Order</label>
                        <div class="col-sm-4">
                            <select name='order[1]' class="form-select" >
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save <i class="bi bi-check-circle ms-2"></i></button>
                    <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('elements/footer') %>